{
  "name": "deefour/authorizer",
  "description": "Simple Authorization via PHP Classes",
  "homepage": "https://github.com/deefour/authorizer",
  "keywords": ["authorizer", "deefour", "authorization", "policies", "policy", "scope", "laravel"],
  "license": "MIT",
  "require": {
    "php": ">=5.5.0",
    "illuminate/support": "^5.0",
    "symfony/http-kernel": "^2.7",
    "deefour/producer": "^1.0.0"
  },
  "require-dev": {
    "phpspec/phpspec": "^2.2.0"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Jason Daly",
      "email": "jason@deefour.me"
    }
  ],
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Deefour\\Authorizer\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Deefour\\Authorizer\\Stubs\\": "stub/"
    },
    "files": [
      "src/helpers.php"
    ]
  }
}
